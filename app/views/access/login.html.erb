<% @page_title = "Admin Login" %>

<div class="jumbotron">
  <h1 class="display-4">Helpdesk Admin</h1>
</div>

<div class="row">

  <div class="col">
  </div>

  <div class="col-6">        
  
    <% if !flash[:alert].blank? %>
      <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
    <% end %>

    <%= form_tag(access_attempt_login_path, :method => :post) do %>
      
        <%= label_tag(:username) %>
        <%= text_field_tag :username, params[:username], :class => "form-control" %>
      
      
        <%= label_tag(:password) %>
        <%= password_field_tag :password, '', :class => "form-control" %><br />

        <%= submit_tag "Log In", :class => "btn btn-primary" %>
      
  
    <% end %>
  </div>

  <div class="col">
  </div>
</div>
